<Page x:Class="CookBook.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid x:Name="RegistrationPages" Margin="0,0,0,-9">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFFF00D2"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FEFE4BDF" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBox x:Name="CreateLogintxt" HorizontalAlignment="Left" Margin="313,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27" BorderBrush="#FFFF00EA" SelectionBrush="#FFF989FF"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,81,0,0" TextWrapping="Wrap" Text="Create Login" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <PasswordBox x:Name="CreatePasswordtxt" HorizontalAlignment="Left" Margin="313,160,0,0" VerticalAlignment="Top" Width="166" Height="27" BorderBrush="#FFFF00EA" SelectionBrush="#FFF989FF"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,134,0,0" TextWrapping="Wrap" Text="Придумайте пароль" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <Button x:Name="RegiBUT" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="331,383,0,0" VerticalAlignment="Top" Height="32" Width="130" Background="White" BorderBrush="#FFFF34E5" Click="RegiBUT_Click" >
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFFE83FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <TextBox x:Name="Nametxt" HorizontalAlignment="Left" Margin="313,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27" BorderBrush="#FFFF00EA" SelectionBrush="#FFF989FF"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,28,0,0" TextWrapping="Wrap" Text="Введите ваше имя" VerticalAlignment="Top" Height="21" Foreground="#F9FF00EA"/>
        <PasswordBox x:Name="CreatePasswordAgaintxt" HorizontalAlignment="Left" Margin="313,211,0,0" VerticalAlignment="Top" Width="166" Height="26" Background="White" BorderBrush="#FFFF00DE"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,186,0,0" TextWrapping="Wrap" Text="Введите пароль еще раз" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <DatePicker x:Name="Birthdaytxt" HorizontalAlignment="Left" Margin="313,258,0,0" VerticalAlignment="Top">
            <DatePicker.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                    <GradientStop Color="#FFA3AEB9"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="#FFFF00DE" Offset="1"/>
                </LinearGradientBrush>
            </DatePicker.BorderBrush>
        </DatePicker>
        <TextBlock HorizontalAlignment="Left" Margin="313,237,0,0" TextWrapping="Wrap" Text="Дата рождения" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <TextBox x:Name="Worktxt" HorizontalAlignment="Left" Margin="427,258,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="52" Height="24" BorderBrush="#FFFF00DE" SelectionBrush="#FFF989FF"/>
        <TextBlock HorizontalAlignment="Left" Margin="418,237,0,0" TextWrapping="Wrap" Text="Опыт работы" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <TextBox x:Name="Emailtxt" HorizontalAlignment="Left" Margin="313,303,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27" BorderBrush="#FFFF00EA" SelectionBrush="#FFF989FF"/>
        <TextBox x:Name="Phonetxt" HorizontalAlignment="Left" Margin="313,351,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Height="27" BorderBrush="#FFFF00DE" SelectionBrush="#FFF989FF"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,282,0,0" TextWrapping="Wrap" Text="Ваш email" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="313,330,0,0" TextWrapping="Wrap" Text="Номер телефона" VerticalAlignment="Top" Height="21" Foreground="White"/>
        <Button x:Name="BackBUY" Content="Вернуться" HorizontalAlignment="Left" Margin="331,420,0,0" VerticalAlignment="Top" Height="32" Width="130" Background="White" BorderBrush="#FFFF00DE" Click="BackBUY_Click" >
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF263DFF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
    </Grid>
</Page>
